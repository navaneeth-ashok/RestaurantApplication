@model IEnumerable<RestaurantApplication.Models.Booking>

@{
    ViewBag.Title = "Bookings Manage";
}
<link rel="stylesheet" href="~/Content/dataTables.min.css" />
<script src="~/Scripts/dataTables.js"></script>
<h2>Manage Booking</h2>

<p>
    @Html.ActionLink("Add new booking", "Create")
</p>
<table class="table" id="sortTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingID)
            </th>
            <th>
                @Html.Encode("Table#")
            </th>
            <th>
                @Html.Encode("# of Seats")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Allergies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMailID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TableNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfOccupants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Allergies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.BookingName)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.EMailID)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Status)
            </th>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BookingID }) |
                @Html.ActionLink("Details", "Details", new { id = item.BookingID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BookingID })
            </td>
        </tr>
        }
    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#sortTable').DataTable();
    });
</script>
