@model IEnumerable<RestaurantApplication.Models.FoodDto>
@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>
@{ 
    int food_id = 0;
}
@foreach (var food in Model)
{
    <h2>@food.FoodName</h2>
    <div>@food.FoodDescription</div>
    <p>$@food.OfferPrice</p>
    <p>
        @for (int i = 0; i < Convert.ToInt32(@food.FoodReviewStar); i++)
        {
            <span>&#9733;</span>
        }
    </p>
    var count = 0;

    <p><button id="add_@food_id" class="food_add">+</button> &nbsp; <span id="order_amt">@count</span> &nbsp; <button id="remove_@food_id" class="food_remove">-</button></p>
    food_id++;
}

<button>Submit</button>

<script>
    window.onload = function () {
        add_buttons = document.getElementsByClassName("food_add");
        for (element of add_buttons){
            element.onclick = addFood;
        }
        remove_buttons = document.getElementsByClassName("food_remove");
        for (element of remove_buttons) {
            element.onclick = removeFood;
        }

    }
    function addFood() {
        var order_amt = this.parentElement.querySelector("#order_amt").innerHTML;
        order_amt++;
        this.parentElement.querySelector("#order_amt").innerHTML = order_amt;
    }
    function removeFood() {
        var order_amt = this.parentElement.querySelector("#order_amt").innerHTML;
        order_amt--;
        this.parentElement.querySelector("#order_amt").innerHTML = order_amt;
    }
</script>