@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_UserPage.cshtml";
}

<link rel="stylesheet" href="~/Content/Home.css">
<div class="front-banner container">
    <div class="row">
        <div class="innerText col-sm-4">
            <h1>Welcome to <span id="brand">Firehouse Pizzeria</span></h1>
        </div>
        <div class="about col-sm-8">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="../Content/images/carousel/a.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="../Content/images/carousel/b.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="../Content/images/carousel/c.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="../Content/images/carousel/d.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="../Content/images/carousel/e.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<div class="container navLinks sticky-top">
    <div class="row">
        <div class="col">
            <a href="#about-div" class="btn btn-primary home-link">about</a>
        </div>
        <div class="col">
            @Html.ActionLink("food", "List", "Food", new { area = "" }, new { @class = "btn btn-primary home-link" })
        </div>
        <div class="col">
            @Html.ActionLink("drinks", "List", "Food", new { area = "" }, new { @class = "btn btn-primary home-link" })
        </div>
        <div class="col">
            @Html.ActionLink("booking", "Create", "Bookings", new { area = "" }, new { @class = "btn btn-primary home-link" })
        </div>
        <div class="col">
            <a href="#location-div" class="btn btn-primary home-link">locations</a>
        </div>
        <div class="col">
            <a href="#" class="btn btn-primary home-link">delivery</a>
        </div>
        <div class="col">
            <a href="#contact-us" class="btn btn-primary home-link">contact</a>
        </div>

    </div>
</div>
<hr />
@Html.Partial("About")
<hr />
@Html.Partial("Location")
<hr />
@Html.Partial("Contact")
<hr />
<script>
    window.onload = function () {
        // remove the sticky navlink in mobile view and add sticky navbar
        if (window.innerWidth < 992) {
            document.getElementsByClassName('navLinks')[0].classList.remove("sticky-top");
            document.getElementsByClassName('navbar')[0].classList.add("sticky-top");
        }
    }

    window.onscroll = function () {
        if (document.getElementsByClassName('navLinks')[0].getBoundingClientRect().y === 0) {
            document.getElementsByClassName('navLinks')[0].classList.add('navlink-dark');
        } else {
            document.getElementsByClassName('navLinks')[0].classList.remove('navlink-dark');
        }
    }
</script>