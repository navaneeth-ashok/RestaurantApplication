@model IEnumerable<RestaurantApplication.Models.OrderID>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/Content/dataTables.min.css" />
<script src="~/Scripts/dataTables.js"></script>
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="sortTable">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.OrderIDNumber)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.OrderIDTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(Convert.ToString(item.OrderIDNumber), "Edit", new { id = item.OrderIDNumber })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderIDTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OrderIDNumber }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OrderIDNumber }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OrderIDNumber })
                </td>
            </tr>
        }
    </tbody>

</table>

<script>
    $(document).ready(function () {
        $('#sortTable').DataTable();
    });
</script>
