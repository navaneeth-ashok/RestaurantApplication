            var baseApplicationPath = '@Url.Content("~/")';

                $.ajax({
                    type: "GET",
                    url: baseApplicationPath + serviceURL,
                    data: param = "",
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: successFunc,
                    error: errorFunc
                });

            function successFunc(data, status) {

                $('#FoodTypeID').find('option').remove();
